{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    // TODO: For now it is disabled, as it leads to a bunch of errors
    // in the internal RN modules... perhaps because we import stuff we
    // should not import.
    // "customConditions": ["react-native-strict-api"],
    "rootDir": ".",
    "paths": {
      "@dr.pogodin/react-native-webview": ["./src/index"]
    },

    // TODO: We should get rid of it, but then we need to reconfigure
    // the types build config (yarn prepare:types) to no catch misc config
    // JS files in the root of the codebase (thus outside the root dir configured
    // for TS).
    "allowJs": false,

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true
  }
}
